<table class="table table-striped">
    <thead>
    <th>Product Name</th>
    <th>Brand Name</th>
    <th>Action</th>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.BrandName</td>
                 
                <td>
                    <a asp-controller="Product" asp-action="Edit" class="btn-success btn" asp-route-id="@product.Id">Edit</a> | <a asp-controller="Product" asp-action="Delete" class="btn btn-danger" asp-route-id="@product.Id" onclick="return confirm('Are you sure you want to delete @product.ProductName?')">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>