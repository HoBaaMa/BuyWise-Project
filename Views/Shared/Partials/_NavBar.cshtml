﻿@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!-- Navbar Start -->
<div class="container-fluid">
    <div class="row border-top px-xl-5">
        <div class="col-lg-3 d-none d-lg-block">
            <a class="btn shadow-none d-flex align-items-center justify-content-between bg-primary text-white w-100" data-toggle="collapse" href="#navbar-vertical" style="height: 65px; margin-top: -1px; padding: 0 30px;">
                <h6 class="m-0">Categories</h6>
                <i class="fa fa-angle-down text-dark"></i>
            </a>
            <partial name="_CategoriesList.cshtml" />
        </div>
        <div class="col-lg-9">
            <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                <a href="" class="text-decoration-none d-block d-lg-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">E</span>Shopper</h1>
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav mr-auto py-0">
                        <a href="@Url.Action("Index", "Home")" class="nav-item nav-link @(currentController == "Home" && currentAction == "Index" ? "active" : "")">Home</a>
                        <a href="@Url.Action("Index", "Shop")" class="nav-item nav-link @(currentController == "Home" && currentAction == "Shop" ? "active" : "")">Shop</a>
                        <a href="@Url.Action("Index", "About")" class="nav-item nav-link @(currentController == "Home" && currentAction == "About" ? "active" : "")">About</a>
                        <a href="@Url.Action("Contact", "About")" class="nav-item nav-link @(currentController == "Home" && currentAction == "Contact" ? "active" : "")">Contact</a>
                    </div>
                    <div class="navbar-nav ml-auto py-0">
                        <a href="@Url.Action("Login", "Customer")" class="nav-item nav-link">Login</a>
                        <a href="@Url.Action("Register", "Customer")" class="nav-item nav-link">Register</a>
                    </div>
                </div>
            </nav>
        </div>
    </div>
</div>
<!-- Navbar End -->