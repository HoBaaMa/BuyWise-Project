<script>
    $(document).ready(function () {
        $(".addtocardbtn").click(function () {

            var productId = $(this).data("id");
            var productPrice = $(this).data("price");
            var productPriceAfterDiscount = $(this).data("priceafterdiscount");

            const data = { productId: productId, productPrice: productPrice, productPriceAfterDiscount: productPriceAfterDiscount };

            $.ajax({
                url: '@Url.Action("AddToCart", "Order")',//  '/Order/AddToCard',
                type: 'POST',
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify(data),
                success: function (data) {
                    alert(data);
                }
            })
        })

    });
</script>